#PARSER PQL
#RUNQUERY

input = ACCESS({source='Source',
wrapper='GenericPush',
transport='Timer',
protocol='None',
dataHandler='Tuple',
options=[['period', '5000']],
schema=[
['time', 'Timestamp']]
})

sel = MAP({EXPRESSIONS = [['toInteger(1)','id'],['"Paul Smith"','name'],['rnd()','value']]}, input)


output = SENDER({sink='Sink',
wrapper='GenericPush',
transport='Printer',
protocol='Jasper',
dataHandler='Tuple',
options=[['template','${ROOT}/DataStreamReport.jrxml'],['multi','true'],['parameter','ReportTitle=Odysseus']]
}, sel)