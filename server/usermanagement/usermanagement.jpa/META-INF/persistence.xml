<persistence version="1.0"
	xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_1_0.xsd">
	<persistence-unit name="odysseusPU">
		<description>Persistence unit for Odysseus</description>
		<provider>org.eclipse.persistence.jpa.PersistenceProvider</provider>
		<class>de.uniol.inf.is.odysseus.core.server.usermanagement.domain.impl.AbstractEntityImpl</class>
		<class>de.uniol.inf.is.odysseus.core.server.usermanagement.domain.impl.UserImpl</class>
		<class>de.uniol.inf.is.odysseus.core.server.usermanagement.domain.impl.PrivilegeImpl</class>
		<class>de.uniol.inf.is.odysseus.core.server.usermanagement.domain.impl.RoleImpl</class>
		<properties>
			<property name="javax.persistence.jdbc.driver" value="org.apache.derby.jdbc.EmbeddedDriver" />
			<property name="javax.persistence.jdbc.url" value="jdbc:derby:odysseusDB;create=true" />
			<property name="eclipselink.target-database" value="Derby" />
			<property name="eclipselink.jdbc.read-connections.min"
				value="1" />
			<property name="eclipselink.jdbc.write-connections.min"
				value="1" />
			<property name="eclipselink.jdbc.batch-writing" value="JDBC" />
			<property name="eclipselink.ddl-generation" value="drop-and-create-tables" />
<!-- 			  <property name="eclipselink.ddl-generation" value="none" />  -->
			<property name="eclipselink.ddl-generation.output-mode"
				value="database" />

			<!-- Logging Settings -->
			<property name="eclipselink.logging.level" value="FINE" />
			<property name="eclipselink.logging.thread" value="true" />
			<property name="eclipselink.logging.session" value="true" />
			<property name="eclipselink.logging.exceptions" value="true" />
			<property name="eclipselink.logging.timestamp" value="true" />
			<property name="eclipselink.logging.level.sql" value="FINEST" />
			<property name="eclipselink.logging.level.cache" value="FINE" />
			<property name="eclipselink.logging.parameters" value="true" />


		</properties>
	</persistence-unit>
</persistence>
