<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension-point id="de.uniol.inf.is.odysseus.rcp.editor.ParameterEditor" name="Parameter Editor" schema="schema/de.uniol.inf.is.odysseus.rcp.editor.ParameterEditor.exsd"/>
   <extension-point id="de.uniol.inf.is.odysseus.rcp.editor.OperatorGroup" name="Operator Group" schema="schema/de.uniol.inf.is.odysseus.rcp.editor.OperatorGroup.exsd"/>
   <extension
         point="org.eclipse.ui.editors">
      <editor
            class="de.uniol.inf.is.odysseus.rcp.editor.editors.LogicalPlanEditor"
            default="false"
            extensions="pln"
            icon="icons/plan.png"
            id="de.uniol.inf.is.odysseus.rcp.LogicalPlanEditor"
            name="Logical Plan Editor">
      </editor>
   </extension>
   <extension
         point="org.eclipse.ui.startup">
      <startup
            class="de.uniol.inf.is.odysseus.rcp.editor.startup.Startup">
      </startup>
   </extension>
   <extension
         point="org.eclipse.ui.views">
      <view
            allowMultiple="false"
            category="Odysseus"
            class="de.uniol.inf.is.odysseus.rcp.editor.views.ParameterView"
            icon="icons/prop.gif"
            id="de.uniol.inf.is.odysseus.rcp.editor.ParameterView"
            name="Parameters"
            restorable="true">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <command
            defaultHandler="de.uniol.inf.is.odysseus.rcp.editor.commands.ExecutePlanCommand"
            id="de.uniol.inf.is.odysseus.rcp.editor.ExecutePlan"
            name="Execute Logical Plan">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.newWizards">
      <wizard
            canFinishEarly="false"
            category="de.uniol.inf.is.odysseus.rcp.wizard.category"
            class="de.uniol.inf.is.odysseus.rcp.editor.wizards.LogicalPlanWizard"
            finalPerspective="de.uniol.inf.is.odysseus.rcp.perspectives.QueriesPerspective"
            hasPages="true"
            icon="icons/plan.png" id="de.uniol.inf.is.odysseus.rcp.editor.LogicalPlanWizard"
            name="Logical Plan">
      </wizard>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            allPopups="false"
            locationURI="toolbar:org.eclipse.ui.main.toolbar">
         <toolbar
               id="de.uniol.inf.is.odysseus.rcp.editor.toolbar1">
            <command
                  commandId="de.uniol.inf.is.odysseus.rcp.editor.ExecutePlan"
                  label="Execute Logical Plan"
                  style="push"
                  tooltip="Executue Logical Plan">
            </command>
         </toolbar>
      </menuContribution>
   </extension>
   <extension
         point="de.uniol.inf.is.odysseus.rcp.editor.OperatorGroup">
      <group
            label="Source">
         <operator
               name="ACCESS">
         </operator>
         <operator
               name="BATCHPRODUCER">
         </operator>
         <operator
               name="FILEACCESS">
         </operator>
         <operator
               name="TESTPRODUCER">
         </operator>
      </group>
      <group
            label="Join">
         <operator
               name="JOIN">
         </operator>
         <operator
               name="PRIORITYIDJOIN">
         </operator>
      </group>
      <group
            label="Sink">
         <operator
               name="FILESINK">
         </operator>
      </group>
   </extension>
   <extension
         point="org.eclipse.ui.perspectiveExtensions">
      <perspectiveExtension
            targetID="*">
         <newWizardShortcut
               id="de.uniol.inf.is.odysseus.rcp.editor.LogicalPlanWizard">
         </newWizardShortcut>
      </perspectiveExtension>
   </extension>

</plugin>

