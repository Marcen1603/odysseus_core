<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension-point id="de.uniol.inf.is.odysseus.rcp.editor.ParameterEditor" name="Parameter Editor" schema="schema/de.uniol.inf.is.odysseus.rcp.editor.ParameterEditor.exsd"/>
   <extension
         point="org.eclipse.ui.editors">
      <editor
            class="de.uniol.inf.is.odysseus.rcp.editor.LogicalPlanEditorPart"
            default="false"
            extensions="pln"
            icon="icons/plan.png"
            id="de.uniol.inf.is.odysseus.rcp.LogicalPlanEditor"
            name="Logical Plan Editor">
      </editor>
   </extension>
   <extension
         point="org.eclipse.ui.startup">
      <startup
            class="de.uniol.inf.is.odysseus.rcp.editor.activator.Startup">
      </startup>
   </extension>
   <extension
         point="org.eclipse.ui.views">
      <view
            allowMultiple="false"
            category="Odysseus"
            class="de.uniol.inf.is.odysseus.rcp.editor.view.ParameterViewPart"
            icon="icons/prop.gif"
            id="de.uniol.inf.is.odysseus.rcp.editor.ParameterView"
            name="Parameters"
            restorable="true">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <command
            defaultHandler="de.uniol.inf.is.odysseus.rcp.editor.commands.ExecutePlanCommand"
            id="de.uniol.inf.is.odysseus.rcp.editor.ExecutePlan"
            name="Execute Logical Plan">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.perspectiveExtensions">
      <perspectiveExtension
            targetID="de.uniol.inf.is.odysseus.rcp.perspective.queries">
         <view
               closeable="true"
               id="de.uniol.inf.is.odysseus.rcp.editor.ParameterView"
               minimized="false"
               moveable="true"
               ratio="0.70f"
               relationship="right"
               relative="org.eclipse.ui.editorss"
               showTitle="true"
               standalone="false"
               visible="true">
         </view>
      </perspectiveExtension>
   </extension>
   <extension
         point="org.eclipse.ui.newWizards">
      <wizard
            canFinishEarly="false"
            category="Odysseus"
            class="de.uniol.inf.is.odysseus.rcp.editor.wizard.NewLogicalPlanWizard"
            finalPerspective="de.uniol.inf.is.odysseus.rcp.perspective.queries"
            hasPages="true"
            icon="icons/plan.png"
            id="de.uniol.inf.is.odysseus.rcp.editor.LogicalPlanWizard"
            name="Logical Plan">
      </wizard>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            allPopups="false"
            locationURI="toolbar:org.eclipse.ui.main.toolbar">
         <toolbar
               id="de.uniol.inf.is.odysseus.rcp.editor.toolbar1">
            <command
                  commandId="de.uniol.inf.is.odysseus.rcp.editor.ExecutePlan"
                  label="Execute Logical Plan"
                  style="push"
                  tooltip="Executue Logical Plan">
            </command>
         </toolbar>
      </menuContribution>
   </extension>

</plugin>

