<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.eclipse.ui.views">
      <view
            category="Odysseus"
            class="de.uniol.inf.is.odysseus.rcp.viewer.queryview.view.QueryViewPart"
            icon="icons/prop_ps.gif"
            id="de.uniol.inf.is.odysseus.rcp.viewer.queryview"
            name="Query View"
            restorable="true">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.perspectiveExtensions">
      <perspectiveExtension
            targetID="de.uniol.inf.is.odysseus.rcp.perspective.observer">
         <view
               closeable="true"
               id="de.uniol.inf.is.odysseus.rcp.viewer.queryview"
               minimized="false"
               moveable="true"
               ratio="0.7"
               relationship="stack"
               relative="org.eclipse.ui.console.ConsoleView"
               showTitle="true"
               standalone="false"
               visible="true">
         </view>
      </perspectiveExtension>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            locationURI="toolbar:de.uniol.inf.is.odysseus.rcp.viewer.queryview">
         <command
               commandId="de.uniol.inf.is.odysseus.rcp.viewer.view.commands.callActiveGraphEditor"
               icon="icons/graph.jpg"
               label="Current Graph"
               style="push">
         </command>
         <command
               commandId="de.uniol.inf.is.odysseus.rcp.viewer.queryview.RefreshCommand"
               icon="icons/refresh.gif"
               label="Refresh"
               style="push"
               tooltip="Refresh">
         </command>
      </menuContribution>
      <menuContribution
            locationURI="popup:de.uniol.inf.is.odysseus.rcp.viewer.queryview">
         <command
               commandId="de.uniol.inf.is.odysseus.rcp.viewer.query.StartQueryCommand"
               label="Start Query"
               style="push">
         </command>
         <command
               commandId="de.uniol.inf.is.odysseus.rcp.viewer.query.StopQueryCommand"
               label="Stop Query"
               style="push">
         </command>
         <separator
               name="Separator1"
               visible="true">
         </separator>
         <command
               commandId="de.uniol.inf.is.odysseus.rcp.viewer.query.RemoveQueryCommand"
               label="Remove Query"
               style="push">
         </command>
         <separator
               name="Separator2">
         </separator>
         <command
               commandId="de.uniol.inf.is.odysseus.rcp.viewer.queryview.CopyCommand"
               label="Copy Querytext"
               style="push">
         </command>
         <command
               commandId="de.uniol.inf.is.odysseus.rcp.viewer.queryview.RefreshCommand"
               icon="icons/refresh.gif"
               label="Refresh"
               style="push">
         </command>
         <separator
               name="Separator3">
         </separator>
      </menuContribution>
      <menuContribution
            locationURI="toolbar:org.eclipse.ui.main.toolbar">
         <toolbar
               id="de.uniol.inf.is.odysseus.rcp.viewer.queryview.toolbar1">
            <command
                  commandId="de.uniol.inf.is.odysseus.rcp.viewer.view.commands.callActiveGraphEditor"
                  icon="icons/graph.jpg"
                  label="Current Graph"
                  style="push">
            </command>
         </toolbar>
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.ui.startup">
      <startup
            class="de.uniol.inf.is.odysseus.rcp.viewer.queryview.activator.StartUp">
      </startup>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <command
            defaultHandler="de.uniol.inf.is.odysseus.rcp.viewer.queryview.commands.CopyCommand"
            id="de.uniol.inf.is.odysseus.rcp.viewer.queryview.CopyCommand"
            name="Copy">
      </command>
      <command
            defaultHandler="de.uniol.inf.is.odysseus.rcp.viewer.queryview.commands.RefreshCommand"
            id="de.uniol.inf.is.odysseus.rcp.viewer.queryview.RefreshCommand"
            name="Refresh">
      </command>
   </extension>

</plugin>
