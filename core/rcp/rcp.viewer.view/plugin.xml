<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         point="org.eclipse.ui.editors">
      <editor
            class="de.uniol.inf.is.odysseus.rcp.viewer.view.editor.impl.GraphViewEditor"
            default="false"
            icon="icons/graph.jpg"
            id="de.uniol.inf.is.odysseus.rcp.viewer.view.GraphEditor"
            name="Graph Editor">
      </editor>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <command
            defaultHandler="de.uniol.inf.is.odysseus.rcp.viewer.view.commands.CallGraphEditorCommand"
            id="de.uniol.inf.is.odysseus.rcp.viewer.view.commands.callGraphEditor"
            name="Call Graph Editor">
      </command>
      <command
            defaultHandler="de.uniol.inf.is.odysseus.rcp.viewer.view.commands.CallActiveGraphEditor"
            id="de.uniol.inf.is.odysseus.rcp.viewer.view.commands.callActiveGraphEditor"
            name="Call Graph Editor with Active Graph">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.startup">
      <startup
            class="de.uniol.inf.is.odysseus.rcp.viewer.view.activator.Startup">
      </startup>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            allPopups="false"
            locationURI="popup:de.uniol.inf.is.odysseus.rcp.viewer.view.GraphEditor">
         <separator
               name="additions">
         </separator>
      </menuContribution>
      <menuContribution
            allPopups="false"
            locationURI="toolbar:de.uniol.inf.is.odysseus.rcp.views.QueryView">
         <command
               commandId="de.uniol.inf.is.odysseus.rcp.viewer.view.commands.callActiveGraphEditor"
               icon="icons/graph.jpg"
               label="Active Graph"
               style="push">
         </command>
      </menuContribution>
      <menuContribution
            allPopups="false"
            locationURI="toolbar:org.eclipse.ui.main.toolbar">
         <toolbar
               id="de.uniol.inf.is.odysseus.rcp.ViewerToolBar">
            <command
                  commandId="de.uniol.inf.is.odysseus.rcp.viewer.view.commands.callActiveGraphEditor"
                  icon="icons/graph.jpg"
                  label="Active Graph"
                  style="push">
            </command>
         </toolbar>
      </menuContribution>
   </extension>


</plugin>
