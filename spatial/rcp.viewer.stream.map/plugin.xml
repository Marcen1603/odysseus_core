   <extension
         point="org.eclipse.ui.views">
               <view
            allowMultiple="false"
            category="Odysseus"
            class="de.uniol.inf.is.odysseus.rcp.viewer.stream.map.views.MapLayerView"
            id="de.uniol.inf.is.odysseus.rcp.viewer.stream.map.views.MapLayerView"
            name="Map Layers"
            restorable="true">
      </view>
               <view
                     allowMultiple="false"
                     category="Odysseus"
                     class="de.uniol.inf.is.odysseus.rcp.viewer.stream.map.views.MapConnectionView"
                     id="de.uniol.inf.is.odysseus.rcp.viewer.stream.map.views.MapConnectionView"
                     name="Map Connections"
                     restorable="true">
               </view>
                <view
                     allowMultiple="false"
                     category="Odysseus"
                     class="de.uniol.inf.is.odysseus.rcp.viewer.stream.map.views.MapQueryFilesView"
                     id="de.uniol.inf.is.odysseus.rcp.viewer.stream.map.views.MapQueryFilesView"
                     name="Preload Query Files"
                     restorable="true">
               </view>
         
   </extension>
   <extension
         point="org.eclipse.ui.editors">
      <editor
            class="de.uniol.inf.is.odysseus.rcp.viewer.stream.map.StreamMapEditorPart"
            default="true"
            filenames="*.map"
            id="de.uniol.inf.is.odysseus.rcp.viewer.stream.map.MapEditor"
            name="StreamMap">
      </editor>
   </extension>
   <extension point="org.eclipse.ui.perspectives">
  		<perspective 
            id="de.uniol.inf.is.odysseus.ui.perspective.spatial" 
            name="Spatial Queries" 
            class="de.uniol.inf.is.odysseus.rcp.viewer.stream.map.perspective.SpatialPerspective" 
            > 
        </perspective> 
   </extension>
   <extension point="org.eclipse.ui.perspectiveExtensions">
         
          <perspectiveExtension
            targetID="de.uniol.inf.is.odysseus.ui.perspective.spatial">    
         
          <view
               id="de.uniol.inf.is.odysseus.rcp.viewer.stream.map.views.MapQueryFilesView"
               minimized="false"
               ratio="0.5f"
               relationship="bottom"
               relative="org.eclipse.ui.navigator.ProjectExplorer">
          </view>
          <view
               id="de.uniol.inf.is.odysseus.rcp.views.SinkView"
               minimized="false"
               ratio="0.5f"
               relationship="bottom"
               relative="org.eclipse.ui.navigator.ProjectExplorer">
         </view>
         <view
               id="de.uniol.inf.is.odysseus.rcp.views.SourcesView"
               minimized="false"
               ratio="0.5f"
               relationship="bottom"
               relative="org.eclipse.ui.navigator.ProjectExplorer">
         </view>
         
         <view
               id="de.uniol.inf.is.odysseus.rcp.views.UserView"
               minimized="false"
               ratio="0.5f"
               relationship="stack"
               relative="org.eclipse.ui.views.ContentOutline">
         </view>
         
         <view
               id="de.uniol.inf.is.odysseus.rcp.viewer.stream.map.views.MapLayerView"
               minimized="false"
               ratio="0.5f"
               relationship="bottom"
               relative="org.eclipse.ui.views.ContentOutline">
         </view>
         <view
               id="de.uniol.inf.is.odysseus.rcp.viewer.stream.map.views.MapConnectionView"
               minimized="false"
               ratio="0.5f"
               relationship="bottom"
               relative="org.eclipse.ui.views.ContentOutline">
         </view>
      </perspectiveExtension>
       
   </extension>
