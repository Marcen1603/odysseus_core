	timestamp LONG,
	id INTEGER,
	itemname STRING,
	description STRING,
	initialbid INTEGER,
	reserve INTEGER,
	expires LONG,
	seller INTEGER ,
	category INTEGER
) SOCKET TUPLE localhost : 65431


CREATE STREAM nexmark:category (
  id INTEGER,
  name STRING,
  description STRING,
  parentid INTEGER
) SOCKET TUPLE localhost : 65433

