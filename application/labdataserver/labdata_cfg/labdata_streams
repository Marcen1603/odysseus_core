CREATE STREAM groupStream(
	groupID INTEGER,
	timestamp STARTTIMESTAMP,
	x INTEGER
) SOCKET MV localhost : 44470

CREATE STREAM ego(
	lane INTEGER,
	timestamp STARTTIMESTAMP,
	x INTEGER
) SOCKET MV localhost : 44472

CREATE STREAM radar(
	rlane INTEGER,
	rtimestamp STARTTIMESTAMP,
	rx INTEGER
) SOCKET MV localhost : 44473

CREATE STREAM radarDouble(
	rlane DOUBLE,
	rtimestamp DOUBLE,
	rx DOUBLE
) SOCKET MV localhost : 44473


CREATE STREAM CarLocStream (
	m_iType INTEGER,   -- Type:
				   --	. 0: position report
				   --	. 2: account balance request
				   --	. 3: daily expenditure request
				   --	. 4: travel time request			 
		m_iTime INTEGER,   -- 0...10799 (second), timestamp position report emitted
		m_iVid INTEGER,	   -- 0...MAXINT, vehicle identifier
		m_iSpeed INTEGER,  -- 0...100, speed of the vehicle
		m_iXway INTEGER,   -- 0...L-1, express way
		m_iLane INTEGER,   -- 0...4, lane
		m_iDir INTEGER,    -- 0..1, direction
		m_iSeg INTEGER,    -- 0...99, segment
		m_iPos INTEGER    -- 0...527999, position of the vehicle
	)

CREATE STREAM movingObjectsOL(
	type STRING,
	id INTEGER,
	sequenceNo INTEGER,
	objectType INTEGER,
	timestamp INTEGER,
	x DOUBLE,
	y DOUBLE,
	speed DOUBLE,
	xNext DOUBLE,
	yNext DOUBLE
) SOCKET MV localhost : 55570

CREATE STREAM linearMove(
	timestamp INTEGER,
	id INTEGER,
	pos INTEGER,
	speed INTEGER,
	add1 INTEGER,
	add2 INTEGER
) SOCKET MV localhost : 55570

CREATE STREAM hypothesis(
	timestamp STARTTIMESTAMP,
	cycle INTEGER
) SOCKET MV localhost : 55571

CREATE STREAM pointStream(
	timestamp STARTTIMESTAMP,
	cycle INTEGER,
	x INTEGER,
	oldX INTEGER,
	distance INTEGER
) SOCKET MV localhost : 55572
	

CREATE STREAM test:labdata (
	timestamp LONG,
	epoch INTEGER,
	moteid INTEGER,
	temperature DOUBLE,
	humidity DOUBLE,
	light DOUBLE,
	voltage DOUBLE
) SOCKET localhost : 55555

CREATE STREAM test:labdataMV (
	timestamp LONG,
	epoch INTEGER,
	moteid INTEGER,
	temperature MV FLOAT 0.5 0.2 0.0 0.0,
	humidity MV FLOAT 0.2 2.0 0.0 0.0,
	light MV FLOAT 0.0 0.0 20.0 0.0,
	voltage MV FLOAT 0.0 0.0 0.0 0.4
) SOCKET MV localhost : 55560


CREATE STREAM fas:viewCar(
	timestamp LONG,
	runtime LONG,
	gps_time DATE HH:mm:ss.SS,
	gps_velocity MV FLOAT 1.5 1.0 1.0 0.0,
	engine_rpm MV FLOAT 1.0 20.0 1.0 0.0,
	speed MV FLOAT 1.0 1.0 1.5 0.0,
	brake_pressure MV FLOAT 0.0 0.0 0.0 0.2
) SOCKET MV localhost : 55561

CREATE STREAM viewCar:brakesCorr(
	timestamp LONG,
	gps_time DATE HH:mm:ss.SS,
	speed DOUBLE,
	pressure DOUBLE,
	accel MV FLOAT 0.125 0.295,
	avgPressure MV FLOAT 0.295 0.7
) SOCKET MV localhost : 55562

CREATE STREAM viewCar:brakesUnCorr(
	timestamp LONG,
	gps_time DATE HH:mm:ss.SS,
	speed DOUBLE,
	pressure DOUBLE,
	accel MV FLOAT 0.125 0.0,
	avgPressure MV FLOAT 0.0 0.7
) SOCKET MV localhost : 55563

CREATE STREAM nexmark:person (
	timestamp LONG,
	id INTEGER,
	name STRING,
	email STRING,
	creditcard STRING,
	city STRING,
	state STRING
) SOCKET TUPLE localhost : 65430

CREATE STREAM nexmark:bid (
	timestamp LONG,
	auction INTEGER,
	bidder INTEGER,
	datetime LONG,
	price DOUBLE
) SOCKET TUPLE localhost : 65432

