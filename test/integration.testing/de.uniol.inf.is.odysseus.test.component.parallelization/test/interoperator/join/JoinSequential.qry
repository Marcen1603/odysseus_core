#PARSER PQL
#RUNQUERY

bid = ACCESS({source='bid',
		wrapper='GenericPull',
		transport='File',
		protocol='CSV',
		dataHandler='Tuple',
		options=[['filename', '${BUNDLE-ROOT}\test\testdata\bidTestData.csv']],
		schema=[
		['timestamp', 'STARTTIMESTAMP'],
		['auction', 'INTEGER'],
		['bidder', 'INTEGER'],
		['datetime', 'LONG'],
		['price', 'DOUBLE']]
		})
		
auction = ACCESS({source='auction',
		wrapper='GenericPull',
		transport='File',
		protocol='CSV',
		dataHandler='Tuple',
		options=[['filename', '${BUNDLE-ROOT}\test\testdata\auctionTestData.csv']],
		schema=[
		['timestamp', 'STARTTIMESTAMP'],
		['id', 'INTEGER'],
		['itemname', 'STRING'],
		['description', 'STRING'],
		['initialbid', 'INTEGER'],
		['reserve', 'INTEGER'],
		['expires', 'LONG'],
		['seller', 'INTEGER'],
		['category', 'INTEGER']]
		})

windowBid = TIMEWINDOW({SIZE = [1, 'MINUTES'],
                  advance = [1, 'SECONDS']
                  }, bid)
                  
              
windowAuction = TIMEWINDOW({SIZE = [10, 'MINUTES'],
                  advance = [1, 'SECONDS']
                  }, auction)
                  
                  
out = JOIN({id='joinId',PREDICATE = 'bid.auction == auction.id'}, windowBid, windowAuction)