#PARSER PQL
#PARALLELIZATION (degree=AUTO) (type=INTER_OPERATOR) (threadedbuffer=true) (buffersize=AUTO) (optimization=false) 
#INTEROPERATOR (id=(aggregateId:mapId)) (degree=8) (buffersize=GLOBAL) (strategy=GroupedAggregateTransformationStrategy) (useParallelOp=false) (fragment=HashFragmentAO) 
#DOREWRITE false
#RUNQUERY

bid = ACCESS({source='bid',
		wrapper='GenericPull',
		transport='File',
		protocol='CSV',
		dataHandler='Tuple',
		options=[['filename', '${BUNDLE-ROOT}\test\testdata\bidTestData.csv']],
		schema=[
		['timestamp', 'STARTTIMESTAMP'],
		['auction', 'INTEGER'],
		['bidder', 'INTEGER'],
		['datetime', 'LONG'],
		['price', 'DOUBLE']]
		})

windowBid = TIMEWINDOW({SIZE = [1, 'MINUTES'],
                  advance = [1, 'SECONDS']
                  }, bid)
 
sum_price_bidder = AGGREGATE({ID = 'aggregateId',
                              aggregations = [
                                ['SUM', 'price', 'sum_price_bidder']
                              ],                                                                  
                            GROUP_BY = ['bidder'],
                              FASTGROUPING = true                                                                   
                            },
                            windowBid
                          )
 
selectBidder = SELECT({ID = 'selectId', PREDICATE = 'bid.bidder < 1000'}, sum_price_bidder)

output = MAP({ID = 'mapId', expressions = [
              ['bid.bidder * 5','bidderMult']
              ]
             }, selectBidder)