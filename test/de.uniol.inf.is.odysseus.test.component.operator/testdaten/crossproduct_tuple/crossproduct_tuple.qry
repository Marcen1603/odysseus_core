///OdysseusScript
#PARSER PQL
#ADDQUERY
wind = ACCESS({
	source='wind', 
	wrapper='GenericPull',
	transport='file', 
	protocol='SimpleCSV',
	dataHandler='Tuple', 
	options=[
		['filename', '${BUNDLE-ROOT}\testdaten\crossproduct_tuple\input0.csv'],
		['csv.delimiter', ';'],
		['csv.trim', 'true']
	], 
	schema=[
		['timestamp', 'STARTTIMESTAMP'], 
		['speed', 'INTEGER'], 
		['direction', 'STRING'], 
		['name', 'STRING'],
		['location', 'INTEGER']
]})
temperature = ACCESS({
	source='temperature', 
	wrapper='GenericPull',
	transport='file', 
	protocol='SimpleCSV',
	dataHandler='Tuple', 
	options=[
		['filename', '${BUNDLE-ROOT}\testdaten\crossproduct_tuple\input1.csv'],
		['csv.delimiter', ';'],
		['csv.trim', 'true'],
		['delay', '0']
		], 
	schema=[
		['timestamp', 'STARTTIMESTAMP'], 
		['temperature', 'INTEGER'], 
		['name', 'STRING'],
		['location', 'INTEGER']
]})
window_wind = window({size = 5, advance = 1, type = 'tuple', drainAtDone=true}, wind)
window_temperature = window({size = 5, advance = 1, type = 'tuple', drainAtDone=true}, temperature)
cross = join({predicate = RelationalPredicate('true')}, window_wind, window_temperature)