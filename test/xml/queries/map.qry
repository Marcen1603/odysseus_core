            source='joinxmlexample8',
            protocol='XML3',
            transport='File',
            wrapper='GenericPull',
            datahandler='XMLStreamObject',
            options=[
              ['filename', '${BUNDLE-ROOT}/queries/document.xml'],
              ['tag_to_strip', 'user']
            ]                                                                                                                                                                                
          }                                                                                                                                                  
        )
        
xmlMapped = XMLMAP({
                target = ['//user//age'],
                source = ['//user//age * 2']
              },
              input
            )      
  