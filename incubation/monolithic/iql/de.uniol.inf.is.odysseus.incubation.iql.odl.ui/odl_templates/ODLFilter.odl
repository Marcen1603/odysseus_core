operator ODLFilter(outputMode = "INPUT", minInputPorts = 1, maxInputPorts = 1){
	
	parameter IPredicate predicate;
	
	on processOpen {
		predicate.init;
	}
	
	on processPunctuation(IPunctuation punctuation, int port) {
		sendPunctuation(punctuation);		
	}
	
	on processNext(Tuple tuple, int port) {
		if (predicate.evaluate(tuple)) {
			sendStreamElement(tuple,0);
		} else {
			sendStreamElement(tuple,1);			
		}
	}		
}