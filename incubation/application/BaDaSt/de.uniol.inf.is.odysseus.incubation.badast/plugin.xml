<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>
   <extension
         id="application"
         point="org.eclipse.core.runtime.applications">
      <application
            cardinality="singleton-global"
            thread="main"
            visible="true">
         <run
               class="de.uniol.inf.is.odysseus.badast.internal.BaDaStApplication">
         </run>
      </application>
   </extension>
   <extension
         id="product"
         point="org.eclipse.core.runtime.products">
      <product
            application="de.uniol.inf.is.odysseus.incubation.badast.application"
            name="BaDaSt Application">
         <property
               name="appName"
               value="BaDaSt Application">
         </property>
      </product>
   </extension>
</plugin>
